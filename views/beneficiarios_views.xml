<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_beneficiario_form" model="ir.ui.view">
            <field name="name">beneficiario.form.view</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <form string="Beneficiario">
                    <notebook>
                        <page string="Beneficiario">
                            <group>
                                <field name="name"/>
                                <field name="street"/>
                                <field name="city"/>
                                <field name="state_id"/>
                                <field name="country_id"/>
                                <field name="vat"/>
                                <field name="phone"/>
                                <field name="email"/>
                                <!-- Agrega aquí los campos adicionales específicos del modelo Beneficiario -->
                            </group>
                        </page>
                        <!-- Puedes agregar más páginas si es necesario -->
                    </notebook>
                </form>
            </field>
        </record>

        <record id="action_beneficiarios" model="ir.actions.act_window">
            <field name="name">Beneficiarios</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('is_beneficiary','=',True)]</field> 
            <!-- Asegúrate de tener un campo is_beneficiary en tu modelo que identifica a un socio como beneficiario -->
        </record>

        <menuitem id="menu_beneficiarios" name="Beneficiarios" parent="base.menu_partner" action="action_beneficiarios"/>
    </data>
</odoo>
